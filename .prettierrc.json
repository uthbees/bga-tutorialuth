{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "overrides": [
        {
            "files": ["*.php"],
            "options": {
                "parser": "php",
                "phpVersion": "7.4",
                "trailingCommaPHP": true,
                "braceStyle": "1tbs",
                "plugins": ["@prettier/plugin-php"]
            }
        }
    ]
}
